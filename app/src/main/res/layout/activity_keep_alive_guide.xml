<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.guide.KeepAliveGuideActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="后台运行设置指南" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="为什么需要手动设置？"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?android:attr/textColorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/guide_intro"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="第一步：关闭电池优化 (必须)"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?android:attr/textColorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/guide_step_one_battery"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="第二步：手机厂商特殊设置"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?android:attr/textColorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/guide_step_two_manufacturer"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="第三步：开启“后台弹出”权限 (必须)"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?android:attr/textColorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/guide_step_three_popup"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="第四步：锁定后台任务 (强烈推荐)"
                android:textAppearance="?attr/textAppearanceTitleLarge"
                android:textColor="?android:attr/textColorPrimary" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/guide_step_four_lock_task"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?android:attr/textColorSecondary"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.3"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>