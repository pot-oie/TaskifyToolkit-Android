<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设备信息"
        android:textColor="#4A5568"
        android:textSize="18sp" android:textStyle="bold"
        android:layout_marginBottom="16dp"/> <TextView
    android:id="@+id/device_ip_text_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="本机IP: 正在获取..."
    android:textSize="16sp" />

    <TextView
        android:id="@+id/device_model_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" android:text="设备型号: "
        android:textSize="16sp" />

    <TextView
        android:id="@+id/android_version_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" android:text="安卓版本: "
        android:textSize="16sp" />

</LinearLayout>